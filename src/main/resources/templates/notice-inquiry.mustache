{{>layout/header}}



<!--여기서 본편-->
<div   style="padding-top: 0px; ">
    <!--여기서 본편 내용-->

    <div class="container justify-content-around">

        <h1> 공지사항 </h1>
        <input type="hidden" id="noticeId" value="{{notice.id}}">
        <div class="form-group row mb-4">
            <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" readonly value="{{notice.title}}">
        </div>

        <div class="form-group row mb-4">
            <textarea class="form-control col-sm-5" rows="5" id="content" readonly >{{notice.content}} </textarea>
        </div>


        <a href="/notice" role="button" class="btn btn-secondary">목록</a>
        {{#isAdmin}}
        <a href="/notice/update/{{notice.id}}" role="button" class="btn btn-secondary">수정</a>
        <button type="button" class="btn btn-primary" id="btn-notice-delete"> 삭제 </button>
        {{/isAdmin}}


    </div>
</div>


{{>layout/footer}}