{{>layout/header}}



<!--여기서 본편-->
<div   style="padding-top: 0px; ">
    <!--여기서 본편 내용-->

    <div class="container justify-content-around">

        <h1>강의 개설</h1>

        <div class="form-group row mb-4">
            <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" value="{{lecture.title}}">
        </div>

        <div class="form-group row mb-4">
            <textarea class="form-control col-sm-5" rows="5" id="outline" placeholder="과제에 대한 소개글을 입력하세요." >{{lecture.outline}}</textarea>
            <!--<input type="text" class="form-control" id="outline" placeholder="과제에 대한 소개글을 입력하세요.">-->
        </div>

        <input type="hidden" id="lectureId" value="{{lecture.id}}">
        <input type="button" value="뒤로" class="btn btn-secondary" onclick="history.back();" />
        <button type="button" class="btn btn-primary" id="btn-lecture-update">변경</button>


    </div>
</div>


