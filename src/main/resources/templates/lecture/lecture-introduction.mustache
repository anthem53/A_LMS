{{>layout/header}}



<!--여기서 본편-->
<div   style="padding-top: 0px; ">
    <!--여기서 본편 내용-->
    <div class="container justify-content-around">

        <div class="d-flex flex-row mb-3" >
            <div class="p-2 bd-highlight"> {{>layout/sidebar}}</div>

            <div class="d-flex flex-column flex-shrink-1  p-3 flex-fill" >
                <H1> 강의 제목 </H1>
                <input type="text" class="form-control col-sm-5 m-3"  value="{{lecture.title}}" readonly>

                <H1> 강의 소개 내용 </H1>
                <textarea class="form-control col-sm-5 m-3" rows="5" id="outline" readonly >{{lecture.outline}} </textarea>

                <h1> 강사 소개 </h1>
                <div class="d-flex flex-row flex-shrink-1  p-3 flex-fill" >
                    <span class="p-3">
                        <img  src={{lecture.picture}} alt="" width="128" height="128" class="rounded-circle me-2">
                    </span>
                    <h2> {{lecture.lecturer}}</h2>
                </div>



            </div>

        </div>



    </div>
</div>


{{>layout/footer}}