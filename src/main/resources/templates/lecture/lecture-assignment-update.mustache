{{>layout/header}}



<!--여기서 본편-->
<div   style="padding-top: 0px; ">
    <!--여기서 본편 내용-->
    <div class="container justify-content-around">

        <div class="d-flex flex-row mb-3" >
            <div class="p-2 bd-highlight"> {{>layout/sidebar}}</div>

            <input type="hidden" id="assignmentId" value="{{lectureAssignment.id}}">
            <div class="d-flex flex-column flex-shrink-1  p-3 flex-fill" >
                <h1> 과제 내용 수정 </h1>
                <div class="form-group row mb-4">
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" value="{{lectureAssignment.title}}">
                </div>

                <div class="form-group row mb-4">
                    <textarea class="form-control col-sm-5" rows="5" id="content" placeholder="과제 내용을 입력하세요.">{{lectureAssignment.content}}</textarea>
                    <!--<input type="text" class="form-control" id="content" placeholder="과제 내용을 입력하세요.">-->
                </div>
                <div class="d-flex flex-row mb-3">
                    <input type="text" id="datePicker" class="me-2 w-50" placeholder="클릭하여 과제 제출 날짜를 선택해주세요." value="{{lectureAssignment.deadlineDate}}" readonly>
                    <input type="text" id="timePicker" class="w-50" placeholder="클릭하여 과제 제출 시간을 선택해주세요." value="{{lectureAssignment.deadlineTime}}" readonly>
                </div>

                <div class="d-flex flex-row mb-3" >
                    <input type="button" value="뒤로" class="btn btn-secondary" onclick="history.back();" />
                    <button type="button" class="btn btn-primary mx-2" id="btn-lecture-assignment-update">저장</button>
                </div>
            </div>

        </div>



    </div>
</div>


{{>layout/footer}}