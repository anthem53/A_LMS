{{>layout/header}}



<!--여기서 본편-->
<div   style="padding-top: 0px; ">
    <!--여기서 본편 내용-->
    <div class="container justify-content-around">

        <div class="d-flex flex-row mb-3" >
            <div class="p-2 bd-highlight"> {{>layout/sidebar}}</div>
            <input type="hidden" id="lectureNoticeId" value="{{lecture_notice.id}}">
            <div class="d-flex flex-column flex-shrink-1  p-3 flex-fill" >
                <h1> 과목 공지사항 </h1>
                <div class="form-group row mb-4">
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" value="{{lecture_notice.title}}" readonly>
                </div>

                <div class="form-group row mb-4">
                    <textarea class="form-control col-sm-5" rows="5" id="content" readonly> {{lecture_notice.content}} </textarea>
                    <!--<input type="text" class="form-control" id="content" placeholder="공지사항을 입력하세요." value="{{lecture_notice.content}}" readonly>-->
                </div>

                <div class="d-flex flex-row mb-3" >
                    <a href="/showLecture/register/take_course/{{lecture.id}}/notice" role="button" class="btn btn-secondary">목록</a>
                    <a href="/showLecture/register/take_course/{{lecture.id}}/notice/{{lecture_notice.id}}/update" role="button" class="btn btn-secondary">수정</a>
                    <button type="button" class="btn btn-primary" id="btn-lecture-notice-delete">삭제</button>

                </div>
            </div>

        </div>



    </div>
</div>


{{>layout/footer}}