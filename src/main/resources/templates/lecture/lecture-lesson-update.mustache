{{>layout/header}}



<!--여기서 본편-->
<div   style="padding-top: 0px; ">
    <!--여기서 본편 내용-->
    <div class="container justify-content-around">

        <div class="d-flex flex-row mb-3" >
            <div class="p-2 bd-highlight"> {{>layout/sidebar}}</div>
            <input type="hidden" id="lectureId" value="{{lecture.id}}">
            <input type="hidden" id="lessonId" value="{{lesson.id}}">

            <div class="d-flex flex-column flex-shrink-1  p-3 flex-fill" >
                <h1> 수업 등록 </h1>
                <div class="form-group row mb-4">
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" value="{{lesson.title}}">
                </div>

                <div class="form-group row mb-4">
                    <input type="text" class="form-control" id="videoLink" placeholder="유튜브 링크를 입력하세요." value="{{lesson.link}}">
                </div>

                <div class="d-flex flex-row mb-3" >
                    <input type="button" value="뒤로" class="btn btn-secondary" onclick="history.back();" />
                    <button type="button" class="btn btn-primary" id="btn-lecture-lesson-update">수정</button>
                </div>
            </div>

        </div>



    </div>
</div>


{{>layout/footer}}