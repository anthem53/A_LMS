<div class="d-flex flex-row">
    <div class="d-flex flex-column align-items-stretch  bg-white" style="width: 380px; ">
        <a href="#" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom">

            <span class="fs-5 fw-semibold">신고 목록</span>
        </a>
        <div class="list-group list-group-flush border-bottom border-right scrollarea overflow-auto vh-100" >

            {{#report}}
                <input type="hidden" id="user--{{id}}" value="{{id}}">

                <button type="button" class="list-group-item list-group-item-action active py-3 lh-tight border-3" id="btn-addmin-user-list-item" onclick="admin.getReportInfo({{id}})">
                    <div class="d-flex w-100 align-items-center justify-content-between">
                        <strong class="mb-1">{{reporter.name}}</strong>
                    </div>
                </button>
            {{/report}}
            {{^report}}
                <a href="#" class="list-group-item list-group-item-action active py-3 lh-tight" aria-current="true">
                    <div class="d-flex w-100 align-items-center justify-content-between">
                        <strong class="mb-1"> 신고 내역이 없습니다. </strong>

                    </div>
                </a>
            {{/report}}
        </div>

    </div>

    <div class="vr mx-3"></div>

    <div class="d-flex flex-column  flex-grow-1">


        <ul class="nav  justify-content-center mb-4">
            <li><a href="#" class="nav-link px-5 fs-2 link-secondary btn btn-primary text-white" aria-current="page">저장</a></li>
            <li><a href="#" class="nav-link px-5 fs-2 link-dark btn btn-danger text-white">강퇴 </a></li>
            <!--<li><a href="#" class="nav-link px-2 link-dark">기타 등등</a></li>-->
        </ul>
        <input type="hidden" id="staticReporterId"  value="">
        <div class="mb-3 row">
            <label for="staticId" class="col-sm-2 col-form-label">Id : </label>
            <div class="col-sm-10 border border-2">
                <input type="text" readonly class="form-control-plaintext text-center" id="staticId" value="------">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="staticReporterName" class="col-sm-2 col-form-label">Reporter Name : </label>
            <div class="col-sm-10 border border-2">
                <input type="text" readonly class="form-control-plaintext text-center" id="staticReporterName" value="------">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="staticLink" class="col-sm-2 col-form-label">Link : </label>
            <div class="col-sm-10 border border-2">
                <input type="text" readonly class="form-control-plaintext text-center" id="staticLink" value="------">
            </div>
        </div>

        <div class="mb-3 ">
            <label for="staticContent" class="col-sm-2 col-form-label"> 신고 내용 :  </label>
            <div class="col-sm-10 border border-2">
                <input type="text" readonly class="form-control-plaintext text-center" id="staticContent" value="------">
            </div>
        </div>



    </div>
</div>

